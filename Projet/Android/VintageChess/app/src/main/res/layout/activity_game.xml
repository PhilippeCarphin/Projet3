<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vintage.vintagechess.ActivityGame"
    android:layout_alignParentBottom="true"
>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <TextView
                android:text="TimeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BlackScore"
                android:textSize="@android:dimen/app_icon_size" />
            <Space
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock2"
                android:format12Hour="00"
                android:textSize="@android:dimen/app_icon_size" />
            <Space
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <TextView
                android:text="TimeW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/WhiteScore"
                android:textSize="@android:dimen/app_icon_size" />
            <Space
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock"
                android:format12Hour="00"
                android:textSize="@android:dimen/app_icon_size" />
            <Space
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <TextView
                android:text="Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="@android:dimen/app_icon_size" />
            <Space
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClockForScore"
                android:format12Hour="00"
                android:textSize="@android:dimen/app_icon_size" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:id="@+id/leftSpace" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/imageViewBoard"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewMotionlessPieces"
                    android:layout_alignTop="@id/imageViewBoard"
                    android:layout_alignBottom="@id/imageViewBoard"
                    android:layout_alignLeft="@id/imageViewBoard"
                    android:layout_alignRight="@id/imageViewBoard"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewMovingPieces"
                    android:layout_alignTop="@id/imageViewBoard"
                    android:layout_alignBottom="@id/imageViewBoard"
                    android:layout_alignLeft="@id/imageViewBoard"
                    android:layout_alignRight="@id/imageViewBoard"
                    android:adjustViewBounds="true"/>


            </FrameLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_weight="0">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RadioGroupSelect">
                <RadioButton
                    android:layout_width="@dimen/config_button_width"
                    android:layout_height="@dimen/config_button_width"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:button = "@drawable/white"
                    android:background="@drawable/red_square_with_style1" />
                <Space
                    android:layout_width="@dimen/distance_between_previews"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_width="@dimen/config_button_width"
                    android:layout_height="@dimen/config_button_width"
                    android:id="@+id/radioButton3"
                    android:checked="false"
                    android:button = "@drawable/white"
                    android:background="@drawable/red_square_with_style2" />
                <Space
                    android:layout_width="@dimen/distance_between_previews"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_width="@dimen/config_button_width"
                    android:layout_height="@dimen/config_button_width"
                    android:id="@+id/radioButton4"
                    android:checked="false"
                    android:button = "@drawable/white"
                    android:background="@drawable/blue_square_with_style1" />
                <Space
                    android:layout_width="@dimen/distance_between_previews"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="@dimen/config_button_width"
                    android:layout_height="@dimen/config_button_width"
                    android:id="@+id/radioButton5"
                    android:checked="false"
                    android:button = "@drawable/white"
                    android:background="@drawable/blue_square_with_style2" />
                <Space
                    android:layout_width="@dimen/distance_between_previews"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="@dimen/config_button_width"
                    android:layout_height="@dimen/config_button_width"
                    android:id="@+id/radioButton6"
                    android:checked="false"
                    android:button = "@drawable/white"
                    android:background="@drawable/wood_square_with_style1" />
                <Space
                    android:layout_width="@dimen/distance_between_previews"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="@dimen/config_button_width"
                    android:layout_height="@dimen/config_button_width"
                    android:id="@+id/radioButton7"
                    android:checked="false"
                    android:button = "@drawable/white"
                    android:background="@drawable/wood_square_with_style2" />
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>
