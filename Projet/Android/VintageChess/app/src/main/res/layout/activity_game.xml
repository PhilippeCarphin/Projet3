<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vintage.vintagechess.ActivityGame"
>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12">



            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock2"
                android:layout_weight="1"
                android:textSize="@android:dimen/app_icon_size" />



            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock"
                android:layout_weight="1"
                android:textSize="@android:dimen/app_icon_size" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="2"
                android:textSize="@android:dimen/app_icon_size" />


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/imageView"/>


        <HorizontalScrollView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView1"
                    android:src="@drawable/red_square_with_style1"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/red_square_with_style2"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/black_and_white_square_with_style1"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/black_and_white_square_with_style2"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/blue_square_with_style1"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/blue_square_with_style2"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/wood_square_with_style1"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/wood_square_with_style2"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>
